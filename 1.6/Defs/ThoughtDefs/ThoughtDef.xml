<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThoughtDef>
        <defName>TradeAura</defName>
        <workerClass>TradingControl.definitions.ThoughtWorker_TradeAura</workerClass>
        <effectMultiplyingStat>SocialImpact</effectMultiplyingStat>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <stages>
            <li>
                <label>Curious Traders</label>
                <description>The colony seems friendly and wants to trade!</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>Social Traders</label>
                <description>We are traders, and we understand the value of goods and the importance of fair exchange.</description>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Friendly Traders</label>
                <description>Let's make a deal!</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>