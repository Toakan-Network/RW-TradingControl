<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Based on OrbitalTradeBeacon-->
	<ThingDef ParentName="BuildingBase">
		<defName>DropSpotTradeShip</defName>
		<label>Orbital Drop Spot</label>
		<thingClass>TradingControl.definitions.DropSpotIndicator</thingClass>
		<description>Designates a spot for trade ships to drop their items.</description>
		<graphicData>
			<texPath>DropSpotMiscIcon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>500</WorkToBuild>
			<Flammability>0.5</Flammability>
			<Mass>5</Mass>
			<Comfort>0</Comfort>
		</statBases>
		<costList>
			<Steel>20</Steel>
		</costList>
		<stuffCategories>
      		<li>Metallic</li>
		</stuffCategories>
		<rotatable>false</rotatable>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>true</useHitPoints>
		<designationCategory>Misc</designationCategory>
		<passability>Standable</passability>
		<placeWorkers>
      		<li>PlaceWorker_ShowTradeBeaconRadius</li>
    	</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<building>
			<sowTag>SupportPlantsOnly</sowTag>
			<canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
			<ai_chillDestination>false</ai_chillDestination>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<designationHotKey>Misc11</designationHotKey>
	</ThingDef>
</Defs>